<launch>

    <arg name="robot_namespace" default="/"/>

    <!-- Load the surrounding environment into Gazebo -->
    <arg name="world_name" default="$(find scout_xarm_complete)/worlds/silvanus_block_arena.world"/>
    <arg name="spawn_x" default="0.0"/>
    <arg name="spawn_y" default="0.0"/>
    <arg name="spawn_z" default="0.25"/>
    <arg name="spawn_yaw" default="0.0"/>
    <!-- GAZEBO_MODEL_PATH: models are in worlds/models if needed -->
    <!-- <env name="GAZEBO_MODEL_PATH" value="$(find scout_xarm_complete)/models:$(optenv GAZEBO_MODEL_PATH)"/> -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>
    
    <!-- Spawn Scout base with box_link, xArm6, and gripper -->
    <include file="$(find scout_xarm_complete)/launch/spawn_scout_with_box.launch">
        <arg name="x" value="$(arg spawn_x)"/>
        <arg name="y" value="$(arg spawn_y)"/>
        <arg name="z" value="$(arg spawn_z)"/>
        <arg name="yaw" value="$(arg spawn_yaw)"/>
    </include>
        
    <!-- RViz can be launched separately if needed -->
    <!-- <node name="rviz" pkg="rviz" type="rviz" /> -->
</launch>
